<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xs.assistant.service.user.DAO.UserInfoDAO">
    <select id="getAllCustomer" resultType="com.xs.DAO.DO.customer.CustomerDO">
        SELECT
            Id,FirstName,LastName,Email,Birth,IdNumber,AreaId,StateId
        FROM
            customer
    </select>

    <select id="selectCustomer" parameterType="java.lang.Integer" resultType="com.xs.DAO.DO.customer.CustomerDO">
        SELECT
            Id,FirstName,LastName,Email,Birth,IdNumber,AreaId,StateId
        FROM
            customer
        WHERE
            Id = #{id}
    </select>

    <select id="selectCustomerByNumberId" parameterType="java.lang.String" resultType="com.xs.DAO.DO.customer.CustomerDO">
        SELECT
            Id,FirstName,LastName,Email,Birth,IdNumber,AreaId,StateId
        FROM
            customer
        WHERE
            IdNumber = #{numberID}
    </select>

    <select id="selectCustomerByEmail" parameterType="java.lang.String" resultType="java.lang.Long">
        SELECT
            Id
        FROM
            customer
        WHERE
            Email = #{email}
    </select>

    <select id="selectCustomerByID" parameterType="java.lang.String" resultType="java.lang.Long">
        SELECT
            Id
        FROM
            customer
        WHERE
            IdNumber = #{accountId}
    </select>

</mapper>