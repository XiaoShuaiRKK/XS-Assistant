<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xs.assistant.login.DAO.LoginDAO">
    <select id="login" resultType="com.xs.DAO.DO.customer.CustomerDO">
        SELECT
            Id,FirstName,LastName,Email,Birth,IdNumber,AreaId,StateId
        FROM
            customer
        WHERE
            Email = #{nameOrEmail}
        OR
            IdNumber = #{nameOrEmail}
    </select>

    <select id="getCustomerPassword" resultType="java.lang.String">
        SELECT
            Password
        FROM
            customer
        WHERE
            Email = #{email}
    </select>

</mapper>